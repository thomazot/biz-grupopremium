.frete
    &__title, &__naosei
        display: none

    &__content
        display: block

    &__actions
        flex: 0 1 80px

    &__form
        display: flex

        .input-box
            flex: 1
            min-width: 0

        label
            background: none
            box-shadow: none
            color: var(--color-text-gray)
            text-transform: none
            font-weight: regular
            font-size: 0

            &:before
                content: 'Calcular Frete'
                font-size: 14px

        .input-text
            flex: 0 1 225px
            margin-left: auto
            max-width: 100%
            width: 225px
            height: 43px
            border: solid 1px var(--color-border)
            background: var(--color-gray)
            box-shadow: none

        .btn
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 43px
            text-transform: uppercase
            font-weight: regular
            font-size: 12px