.qty-wrapper
    height: 43px

    .input-box
        position: relative
        padding-right: 20px
        height: 100%

    input
        width: 100%
        height: 100%
        border: 0
        border-radius: 0
        background: white
        box-shadow: none
        box-shadow: 0 0 0 1px var(--color-border)
        color: var(--color-text)
        font-weight: regular
        font-size: 14px

    .bt-box
        top: 0
        right: 0
        width: 20px
        height: 100%
        background: white
        box-shadow: none
        transform: none

        .bt
            &.plus, &.less
                display: flex
                justify-content: center
                align-items: center
                width: 100%
                height: 50%
                border-radius: 0
                box-shadow: 0 0 0 1px var(--color-border)
                color: var(--color-text)
                font-weight: regular
                font-size: 13px

                &:before
                    display: none

                span
                    display: inline