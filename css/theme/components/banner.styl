.cms-home .header-container + .banner
    margin: 0

.banner
    img
        width: 100%
        object-fit: cover

#banner__banner-grid
    margin: 50px 0

    .banner
        &__link
            display: flex
            align-items: stretch
            min-height: 100%

        &__item
            @media media-max-lg
                margin-bottom: gap

            img
                object-fit: cover

        &__wrapper
            display: block
            column-count: 1

            @media media-min-lg
                display: grid
                grid-template: 'slide1 slide2 slide2' 'slide1 slide3 slide4'
                grid-gap: gap

                .slide--1
                    grid-area: slide1

                .slide--2
                    grid-area: slide2

                .slide--3
                    grid-area: slide3

                .slide--4
                    grid-area: slide4

#banner__regua-de-vantagens
    background: var(--primary)
    color: var(--primary-contrast)
    font-weight: regular
    font-size: 12px

    .rulers
        display: flex
        justify-content: center
        align-items: center
        width: 100%

    strong
        display: block
        text-transform: uppercase
        font-weight: bold
        font-size: 13px

    .ico
        flex: 0 0 25px
        margin-right: 10px
        width: 25px
        height: 25px
        fill: var(--secundary)

    .banner
        &__wrapper
            container()

            width: viewport !important

#banner__banner-grid-footer
    margin: 50px 0

    container()

    .banner
        &__link
            display: flex
            align-items: stretch
            min-height: 100%

        &__item
            @media media-max-lg
                margin-bottom: gap

            img
                object-fit: cover

        &__wrapper
            display: block
            column-count: 1

            @media media-min-lg
                display: grid
                grid-template: 'slid1 slid2 slid3' 'slid4 slid4 slid4'
                grid-gap: gap

                .slide--1
                    grid-area: slid1

                .slide--2
                    grid-area: slid2

                .slide--3
                    grid-area: slid3

                .slide--4
                    grid-area: slid4
