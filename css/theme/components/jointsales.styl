.jointsales
    @media media-max-sm
        container()

    @media media-min-sm
        &__title, &__content
            container()

    .owl-wrapper-outer
        border: 0
        box-sahdow: 0

    .more
        display: flex
        justify-content: center
        align-items: center
        margin-top: 20px
        margin-bottom: 20px
        width: 40px
        height: 40px
        border-radius: 0
        background: none
        color: var(--secundary)
        font-size: 20px
        transform: none

    select
        padding: 0 10px
        padding-right: 40px
        height: 30px
        border: solid 1px var(--color-border)
        border-radius: 0
        background: no-repeat url(down) center right 10px
        box-shadow: none
        color: var(--color-text)
        font-size: 14px
        appearance: none

    &__item
        display: block
        flex: 1
        min-width: 0
        max-width: none

    &__current
        flex: 1
        padding: 0
        min-width: 0

        @media media-min-lg
            flex: 0 1 33.33%

        + .jointsales__list
            flex: 0 1 50%
            min-width: 0

            @media media-min-lg
                flex: 0 1 33.33%

        .thumb
            flex: 1
            margin-right: 0
            min-width: 0

    &__currentin
        display: block
        flex: 1
        min-width: 0
        box-shadow: none

    &__row
        padding: 0
        opacity: 0

        &.jointsales__options
            display: flex

        @media media-min-lg
            flex-wrap: nowrap
            align-items: center !important

        &.on
            opacity: 1

    &__essential
        position: relative
        margin: 0 20px 2px
        padding: 30px 30px 0
        min-width: 0
        width: calc(100% - 40px)
        background: none
        color: var(--primary)

        @media media-min-lg
            flex: 0 1 355px
            margin-left: 60px
            padding-left: 60px

        @media media-max-sm
            margin-top: 20px

        &:before
            @media media-min-lg
                position: absolute
                top: 50%
                left: -40px
                display: flex
                justify-content: center
                align-items: center
                margin-top: 20px
                margin-top: -20px
                margin-bottom: 20px
                width: 40px
                height: 40px
                border-radius: 0
                background: none
                color: var(--secundary)
                content: '='
                font-weight: bold
                font-size: 35px
                transform: none

        .parcelamento
            display: block
            text-align: center

    &__action
        margin: 20px -30px 0

        .btn
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 43px
            border: 0
            border-radius: 0
            background: var(--button)
            box-shadow: none
            text-transform: uppercase
            font-weight: bold
            font-size: 14px

    &__name-product
        font-weight: medium
        font-size: 14px

        .more-name
            display: block
            padding: 10px 0

    &__totals
        display: flex
        justify-content: center
        align-items: center

        .economize
            display: none

        .todos-juntos
            display: none

        .comprando-junto
            text-align: center
            font-size: 0

            .price
                margin: 0 auto
                color: var(--secundary)
                text-align: center
                font-weight: bold
                font-size: 28px

                .price:before
                    content: 'POR: '

    &__payments
        margin-top: 10px

        .avista
            display: none

        .preco-parcelado-sem-juros
            + .preco-parcelado
                display: none

        .preco-parcelado-sem-juros, .preco-parcelado
            &, > span
                display: inline
                color: var(--color-text)
                font-weight: regular
                font-size: 14px

    &__currentin, &__item
        img
            width: 100%
            object-fit: contain

        .thumb
            margin-bottom: 16px

        .title
            margin-bottom: 20px
            padding-bottom: 20px
            border-bottom: solid 1px var(--border-products)
            color: var(--text-two)
            font-weight: medium
            font-size: 16px

        .info
            margin-top: auto

        .old-price
            .label
                display: none

            .price span
                color: var(--color-text-gray)
                font-weight: medium
                font-size: 14px

        .regular-price, .special-price
            .label
                display: none

            .price span
                color: var(--primary)
                font-weight: medium
                font-size: 18px

    &__title
        titleCollateral()
