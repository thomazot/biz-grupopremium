.cms-intelbras
    .breadcrumb
        display: none

    .main
        --primary: #00662e
        --secundary: #00a94c

        &
            max-width: 100%
            width: 100%

    .products
        container()

        &__title
            padding: 40px 0
            border: 0
            color: var(--secundary)
            text-align: center

.intelbras-about
    container()

    margin: 40px auto
    text-align: center

    &__title
        padding: 40px 0
        color: var(--secundary)
        text-transform: uppercase
        font-weight: bold
        font-size: 24px

    &__main
        @media media-min-lg
            display: flex
            justify-content: space-between
            gap: gap

        h4
            margin: 0
            color: var(--secundary)
            font-weight: bold
            font-size: 16px

        p
            color: var(--color-text-gray)
            font-weight: regular
            font-size: 14px
